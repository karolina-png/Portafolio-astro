---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "PHP- Sistema de Información",
    description:
      "Sistema de Información de Gestión de Intercambio de Bienes y Servicios",
    link: "https://zloty-colaborate.onrender.com/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/zloty.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },

  {
    title: "DRUPAL- Portal de Turismo de Caquetá",
    description: "Bienvenido al portal de turismo del Caquetá, un destino lleno de naturaleza, cultura y aventura en el corazón de la Amazonía colombiana. Descubre la belleza de sus paisajes, la diversidad de su flora y fauna, y la calidez de su gente. En este portal encontrarás información sobre los principales atractivos turísticos, actividades para disfrutar al aire libre, opciones de alojamiento, gastronomía local y mucho más.",
    link: "https://caqueta.travel/",
    image: "/projects/portal caqueta.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],       
  },
]
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
        {title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
